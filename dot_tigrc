bind main R !git rebase -i %(commit) --keep-empty
bind diff R !git rebase -i %(commit) --keep-empty
bind main S !git rebase -i %(commit) --autosquash
bind diff S !git rebase -i %(commit) --autosquash
bind main C !clang_format_branch.py %(commit)

bind main ! !?git revert %(commit)
bind diff ! !?git revert %(commit)

bind main E <tig_edit %(commit)
bind diff E <tig_edit %(commit)

bind generic <Ctrl-f> !git commit --fixup %(commit)

bind main <Ctrl-o> !git checkout %(commit)

set main-view-author-width = 20
set ignore-case = smart-case

# Toggle commit hash with these settings or X when in main-view
#set main-view-id = yes
#set main-view-id-width = 8
